CC = gcc
CFLAGS = -Wall -Wextra -g
LDFLAGS = 

# Fichiers objets communs
COMMON_OBJ = common.o
ADDR ?= 127.0.0.1
PORT ?= 8080

# Ports des serveurs spÃ©cialisÃ©s
PORT_DATE = 8081
PORT_FILES = 8082
PORT_CONTENT = 8083
PORT_STATS = 8084

# Tous les exÃ©cutables
ALL = serverTCP server_date server_files server_content server_stats clientTCP

.PHONY: all clean clean-ports stop run help

all: $(ALL)

# Compilation de common.o
common.o: common.c common.h
	$(CC) $(CFLAGS) -c common.c -o common.o

# serverTCP (serveur principal)
serverTCP: serverTCP.c $(COMMON_OBJ)
	$(CC) $(CFLAGS) serverTCP.c $(COMMON_OBJ) -o serverTCP $(LDFLAGS)

# Serveur spÃ©cialisÃ©: Date
server_date: server_date.c $(COMMON_OBJ)
	$(CC) $(CFLAGS) server_date.c $(COMMON_OBJ) -o server_date $(LDFLAGS)

# Serveur spÃ©cialisÃ©: Fichiers
server_files: server_files.c $(COMMON_OBJ)
	$(CC) $(CFLAGS) server_files.c $(COMMON_OBJ) -o server_files $(LDFLAGS)

# Serveur spÃ©cialisÃ©: Contenu
server_content: server_content.c $(COMMON_OBJ)
	$(CC) $(CFLAGS) server_content.c $(COMMON_OBJ) -o server_content $(LDFLAGS)

# Serveur spÃ©cialisÃ©: Stats
server_stats: server_stats.c $(COMMON_OBJ)
	$(CC) $(CFLAGS) server_stats.c $(COMMON_OBJ) -o server_stats $(LDFLAGS)

# clientTCP
clientTCP: clientTCP.c $(COMMON_OBJ)
	$(CC) $(CFLAGS) clientTCP.c $(COMMON_OBJ) -o clientTCP $(LDFLAGS)

# Nettoyer les ports - Tue les processus utilisant les ports
clean-ports:
	@echo " Nettoyage des ports des serveurs..."
	@echo "ArrÃªt des processus sur les ports $(PORT), $(PORT_DATE), $(PORT_FILES), $(PORT_CONTENT), $(PORT_STATS)..."

	@-if [ "$$(uname -o 2>/dev/null)" = "Cygwin" ]; then \
		for p in $(PORT) $(PORT_DATE) $(PORT_FILES) $(PORT_CONTENT) $(PORT_STATS); do \
			PIDS=$$(netstat -ano 2>/dev/null | grep ":$$p " | awk '{print $$5}' | sort -u); \
			if [ -n "$$PIDS" ]; then \
				for pid in $$PIDS; do \
					taskkill /F /PID $$pid > /dev/null 2>&1 && echo "%s PID $$pid arrÃªtÃ©" || echo " Ã‰chec PID $$pid"; \
				done; \
			else \
				echo "%s Port $$p libre"; \
			fi; \
		done; \
	fi
	
	@sleep 2
	@echo " Nettoyage des ports terminÃ©"
# ArrÃªter tous les serveurs (alias de clean-ports)
stop: clean-ports
	@echo "ðŸ›‘ Tous les serveurs ont Ã©tÃ© arrÃªtÃ©s"

# Nettoyage complet - ArrÃªte les serveurs ET supprime les fichiers
clean: clean-ports
	@echo " Suppression des fichiers exÃ©cutables et temporaires..."
	rm -f $(ALL) *.o users.txt server_info.txt
	@echo "%s Nettoyage complet effectuÃ©"

# Lancer tous les serveurs en arriÃ¨re-plan
run: all clean-ports
	@echo " DÃ©marrage de l'Ã©cosystÃ¨me multiserveur..."
	@echo " Configuration:"
	@echo "   - Proxy principal: $(ADDR):$(PORT)"
	@echo "   - Service Date: port $(PORT_DATE)"
	@echo "   - Service Fichiers: port $(PORT_FILES)"
	@echo "   - Service Contenu: port $(PORT_CONTENT)"
	@echo "   - Service Stats: port $(PORT_STATS)"
	@echo ""
	
	@echo "=== DÃ©marrage des serveurs spÃ©cialisÃ©s ==="
	@echo " Lancement serveur Date sur port $(PORT_DATE)..."
	@./server_date &
	@sleep 1
	
	@echo "%s Lancement serveur Fichiers sur port $(PORT_FILES)..."
	@./server_files  &
	@sleep 1
	
	@echo " Lancement serveur Contenu sur port $(PORT_CONTENT)..."
	@./server_content  &
	@sleep 1
	
	@echo " Lancement serveur Stats sur port $(PORT_STATS)..."
	@./server_stats  &
	@sleep 2
	
	@echo "%s Tous les serveurs spÃ©cialisÃ©s dÃ©marrÃ©s en arriÃ¨re-plan"
	@echo " Logs disponibles dans: server_*.log"
	
	# VÃ©rification que les serveurs sont bien lancÃ©s
	@echo ""
	@echo " VÃ©rification des serveurs..."
	@for p in $(PORT_DATE) $(PORT_FILES) $(PORT_CONTENT) $(PORT_STATS); do \
		if netstat -ano 2>/dev/null | grep ":$$p " > /dev/null; then \
			echo "%s Serveur sur port $$p: EN Ã‰COUTE"; \
		else \
			echo " Serveur sur port $$p: NON DÃ‰MARRÃ‰"; \
		fi; \
	done
	@echo ""
	
	@echo "=== DÃ©marrage du serveur principal (Proxy) ==="
	@echo " Serveur principal sur $(ADDR):$(PORT)..."
	./serverTCP $(ADDR) $(PORT)

# Lancer seulement le client
client: clientTCP
	@echo "ðŸ‘¤ Lancement du client..."
	./clientTCP

# Aide
help:
	@echo "Usage du Makefile - SystÃ¨me Multiserveur:"
	@echo ""
	@echo "  make all           - Compiler tous les programmes"
	@echo "  make run           - Lancer tous les serveurs (dÃ©faut: 127.0.0.1:8080)"
	@echo "  make run ADDR=<ip> PORT=<port> - Lancer avec IP/port personnalisÃ©s"
	@echo "  make client        - Lancer seulement le client"
	@echo "  make stop          - ArrÃªter tous les serveurs"
	@echo "  make clean         - Nettoyer COMPLET (arrÃªte serveurs + supprime fichiers)"
	@echo "  make clean-ports   - ArrÃªter les serveurs sans supprimer les fichiers"
	@echo "  make status        - VÃ©rifier l'Ã©tat des serveurs"
	@echo ""
	@echo "Ports utilisÃ©s:"
	@echo "  - Proxy: $(PORT) (configurable)"
	@echo "  - Date: $(PORT_DATE)"
	@echo "  - Fichiers: $(PORT_FILES)"
	@echo "  - Contenu: $(PORT_CONTENT)"
	@echo "  - Stats: $(PORT_STATS)"
	@echo ""
	@echo "Exemples:"
	@echo "  make run ADDR=192.168.1.10 PORT=9000"
	@echo "  make run PORT=7777"
	@echo "  make clean          # ArrÃªte tout et nettoie"
	@echo "  make stop           # ArrÃªte les serveurs sans nettoyer"
	@echo "  make status         # VÃ©rifie si les serveurs tournent"